<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragments_background"
    android:orientation="vertical"
    tools:context=".MembersFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/bungee"
        android:text="Members"
        android:textColor="#563B87"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/MembersLeader"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:background="@drawable/round_primary"
        android:drawableLeft="@drawable/leader"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="LeaderName"
        android:textAlignment="center"
        android:textColor="#563B87"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/listLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_member_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_primary"
            android:drawableRight="@drawable/add"
            android:padding="10dp"
            android:text="Add Member"
            android:textColor="#563B87"
            android:textStyle="bold"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/members_Added"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_primary"
            android:drawableRight="@drawable/done"
            android:padding="10dp"
            android:text="Submit"
            android:textColor="#563B87"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>